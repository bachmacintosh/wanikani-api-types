{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"lib": ["ESNext", "dom"],
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"removeComments": false,
		"target": "ES2020",
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"exactOptionalPropertyTypes": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist/**", "tests/**", "node_modules/**"]
}
