{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": false,
    "target": "ES2020",
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*.ts", "vitest.config.ts"],
  "exclude": ["dist/**", "tests/**", "node_modules/**"]
}
